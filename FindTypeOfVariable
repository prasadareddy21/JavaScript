
//TO find the type of the variable:

var variable1 = [1,2,3,4];
var variable2 = 4.15 ;

function isArray(variable){
    solution = variable.constructor.toString().indexOf("Array") > -1 ;
    
  return solution;
}

console.log(isArray(variable1));
console.log(isArray(variable2));

console.log("Some Space after first method");
