//Smae code for String

//TO find the type of the variable:

var variable3 = [1,2,3,4];
var variable4 = 4.15 ;
var variable5 = "Hell Yeah";

function isString(something){
    return something.constructor.toString().indexOf("String") > -1 ;
  
}

console.log(isString(variable3));
console.log(isString(variable4));
console.log(isString(variable5));


